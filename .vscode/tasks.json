{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "windows": {
                "command": "mingw32-make",
                "args": [
                    "-fwindows.makefile"
                ]
            },
            "linux": {
                "command": "make",
                "args": [
                    "-flinux.makefile"
                ]
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "label": "clean",
            "type": "shell",
            "problemMatcher": [
                "$gcc"
            ],
            "windows": {
                "command": "mingw32-make",
                "args": [
                    "clean",
                    "-fwindows.makefile"
                ]
            },
            "linux": {
                "command": "make",
                "args": [
                    "clean",
                    "-flinux.makefile"
                ]
            }
        }
    ]
}