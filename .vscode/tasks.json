    "tasks": [
        {
            "label": "make",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "windows": {
                "command": "mingw32-make",
                "args": [
                    "-fwindows.makefile"
                ]
            },
            "linux": {
                "command": "make",
                "args": [
                    "-flinux.makefile"
                ]
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "problemMatcher": [
                "$gcc"
            ],
            "windows": {
                "command": "mingw32-make",
                "args": [
                    "clean",
                    "-fwindows.makefile"
                ]
            },
            "linux": {
                "command": "make",
                "args": [
                    "clean",
                    "-flinux.makefile"
                ]
            }
        }
    ]
}