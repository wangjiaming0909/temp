{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "linux": {
        "command": "make",
        "isShellCommand": true,
        "showOutput": "always",
        "tasks": [
            {
                "taskName": "all",
                "isBuildCommand": true,
                "isBackground": true,
                "args": [
                   "-f makefile.linux" 
                ],
                "problemMatcher": "$msCompile"
            },
            {
                "taskName": "clean",
                "args": [
                    "-f makefile.linux"
                ],
                "problemMatcher": "$msCompile"
            }
        ]
    },
    "windows": {
        "command": "mingw32-make",
        "isShellCommand": true,
        "showOutput": "always",
        "tasks": [
            {
                "taskName": "all",
                "isBuildCommand": true,
                "isBackground": true,
                "args": [
                    "-fmakefile.windows"
                ],
                "problemMatcher": "$msCompile"
            }
            ,
            {
                "taskName": "clean",
                "args": [
                    "-fmakefile.windows"
                ],
                "problemMatcher": "$msCompile"
            }
        ]
        
    }
}